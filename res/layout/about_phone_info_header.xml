<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:id="@+id/conquer_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/phone_image"
        android:layout_width="100dp"
        android:layout_height="205dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="36dp"
        android:src="@drawable/device_about_phone_header"
        android:antialias="true"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:contentDescription="@null" />

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="26dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/phone_image">

        <TextView
            android:id="@+id/device_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/conquer_device_title"
            style="@style/TextAppearance.ConquerInfoTitle" />

        <TextView
            android:id="@+id/device_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            style="@style/TextAppearance.ConquerInfoSummary" />

        <TextView
            android:id="@+id/memory_storage_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/conquer_memory_storage_title"
            style="@style/TextAppearance.ConquerInfoTitle" />

        <TextView
            android:id="@+id/memory_storage_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            style="@style/TextAppearance.ConquerInfoSummary" />

        <TextView
            android:id="@+id/battery_size_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/conquer_battery_size_title"
            style="@style/TextAppearance.ConquerInfoTitle" />

        <TextView
            android:id="@+id/battery_size_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            style="@style/TextAppearance.ConquerInfoSummary" />

        <TextView
            android:id="@+id/screen_res_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/conquer_screen_res_title"
            style="@style/TextAppearance.ConquerInfoTitle" />

        <TextView
            android:id="@+id/screen_res_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.ConquerInfoSummary" />

    </LinearLayout>
</RelativeLayout>
